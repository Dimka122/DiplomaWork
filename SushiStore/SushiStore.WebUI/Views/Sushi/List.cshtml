@using SushiStore.WebUI.Models
@using SushiStore.WebUI.HtmlHelpers
@model SushisListViewModel

@{
    ViewBag.Title = "Товары";
}

@foreach (var p in @Model.Sushis)
{
    <div class="well">
        <h3>
            <strong>@p.Name</strong>
            <span class="pull-right label label-primary">@p.Price.ToString("# грн")</span>
        </h3>
        <span class="lead">@p.Description</span>
    </div>
}
<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>

